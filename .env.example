# === Core server ===
NODE_ENV=development
PORT=5000

# MongoDB connection string
MONGO_URI=mongodb://127.0.0.1:27017/rozna

# JWT signing secret
JWT_SECRET=change_me_super_secret

# In production this is REQUIRED by backend/src/config/env.js + cors.middleware.js
FRONTEND_URL=http://localhost:4200

# Optional: used to construct absolute public URLs for uploaded files
# If empty, backend falls back to req.protocol + req.host
BASE_URL=http://localhost:5000

# Uploads folder name (relative to backend/)
UPLOAD_BASE_PATH=uploads

# Max upload size in bytes (defaults to 10MB if not set)
MAX_FILE_SIZE=10485760

# Rate limiting (defaults: 15 minutes + 100 requests)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100


# === Firebase Admin (required if firebase is used) ===
# backend/src/config/firebase.js will throw if these are missing and firebase is imported/used
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# IMPORTANT: Use literal \n in .env for newlines (the code converts \n -> real newlines)
FIREBASE_PRIVATE_KEY=


# === Google Vision OCR (Image -> Text) ===
# Your key file path:
# backend/Key/roznaKey_vision_key.json
# Recommended: point GOOGLE_APPLICATION_CREDENTIALS to that path.
# (This is the standard env var used by Google Cloud SDKs.)
GOOGLE_APPLICATION_CREDENTIALS=./Key/roznaKey_vision_key.json

# Optional: if you want to force a project id (often not needed when using service account JSON)
GOOGLE_CLOUD_PROJECT=

# Optional: OCR behavior tuning
OCR_LANGUAGE_HINTS=en
OCR_ENABLE_HANDWRITING=true


# === LanguageTool (grammar/spelling) ===
# If you run LanguageTool locally:
#   docker run -p 8010:8010 silviof/docker-languagetool
LANGUAGETOOL_URL=http://127.0.0.1:8010
# Default language sent to LanguageTool when frontend doesn't specify
LANGUAGETOOL_DEFAULT_LANGUAGE=en-US
# Optional: request timeout in ms
LANGUAGETOOL_TIMEOUT_MS=15000


# === Optional LLM (for advanced correction categorization / suggestions) ===
# Choose provider and set the corresponding keys.
LLM_PROVIDER=none

# OpenAI-compatible (OpenAI / OpenRouter / local gateway)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=30000

# If you want to disable LLM for cost/safety:
# LLM_PROVIDER=none
